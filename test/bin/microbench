if [ "x$CASSANDRA_INCLUDE" = "x" ]; then
    # Locations (in order) to use when searching for an include file.
    for include in "`dirname "$0"`/cassandra.in.sh" \
                   "$HOME/.cassandra.in.sh" \
                   /usr/share/cassandra/cassandra.in.sh \
                   /usr/local/share/cassandra/cassandra.in.sh \
                   /opt/cassandra/cassandra.in.sh; do
        if [ -r "$include" ]; then
            . "$include"
            break
        fi
    done
elif [ -r "$CASSANDRA_INCLUDE" ]; then
    . "$CASSANDRA_INCLUDE"
fi

if [ -z "$CLASSPATH" ]; then
    echo "You must set the CLASSPATH var" >&2
    exit 1
fi

LOGBACK_CONF="`dirname $0`"/../conf/logback-bench.xml
JVM_OPTS="$JVM_OPTS -Djmh.executor=CUSTOM"
JVM_OPTS="$JVM_OPTS -Djmh.executor.class=org.apache.cassandra.test.microbench.FastThreadExecutor"
JVM_OPTS="$JVM_OPTS -Dcassandra.config.loader=org.apache.cassandra.OffsetAwareConfigurationLoader"
JVM_OPTS="$JVM_OPTS -Dcassandra.test.offsetseed=0"
#JVM_OPTS="$JVM_OPTS -agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=5005"

TEST=$1
shift
FQTEST=org.apache.cassandra.test.microbench.$TEST
javap -cp "$CLASSPATH" org.apache.cassandra.test.microbench.$TEST > /dev/null

if [[ "$?" != "0" ]]
then
  echo "unknown test $TEST"
  exit 1
fi

#MAIN=`javap -cp "$CLASSPATH" $FQTEST | grep -v "static void main" | wc -l`

if [[ `javap -cp "$CLASSPATH" $FQTEST | grep "static void main" | wc -l` =~ "0" ]]
then
  echo "Running $TEST via jmh runner"
  "$JAVA" $JAVA_AGENT -ea -cp "$CLASSPATH" $JVM_OPTS \
          -Dcassandra.storagedir="$cassandra_storagedir" \
          -Dlogback.configurationFile="$LOGBACK_CONF" \
          -jar build/test/benchmarks.jar $TEST -rf json -rff "jmh-result-$TEST.json" $@
else
  echo "Running $TEST via main"
  "$JAVA" $JAVA_AGENT -ea -cp "$CLASSPATH" $JVM_OPTS \
          -Dcassandra.storagedir="$cassandra_storagedir" \
          -Dlogback.configurationFile="$LOGBACK_CONF" \
          $FQTEST -rf json -rff "jmh-result-$TEST.json" $@
fi
